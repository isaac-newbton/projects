{% extends "base.html.twig" %}

{% block body %}

<div class="container">
	<div class="row">
		<div class="col">
			<ul class="list-group">
			{% for project in projects %}
				<li class="list-group-item">
					<div>
						<h5>{{ project.name }} - {{project.deleted ? 'deleted' : 'active'}}</h5>
						<a href="/project/{{ project.encodedEditUuid }}">Edit</a>
						<a href="/project/{{ project.encodedViewUuid }}">View</a>
					</div>
				</li>
			{% endfor %}
			</ul>
		</div>
	</div>
</div>

{% endblock %}

{% block javascripts %}
{% endblock %}